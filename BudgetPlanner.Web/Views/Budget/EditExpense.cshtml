@model BudgetPlanner.Web.Models.Expense
@{
    ViewData["Title"] = "Edit Expense";
}

<h1>Edit Expense</h1>

<form asp-action="EditExpense" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" id="expenseType" class="form-control">
            <option value="0">Monthly Bill</option>
            <option value="1" data-interval="12">Yearly Bill</option>
            <option value="1" data-interval="">Recurring (every N months)</option>
            <option value="2" data-interval="4">Chit</option>
        </select>
    </div>
    <div class="form-group" id="intervalGroup" style="display:none;">
        <label asp-for="IntervalMonths"></label>
        <input asp-for="IntervalMonths" type="number" min="1" max="120" class="form-control" placeholder="e.g. 3, 4, 6" />
        <span asp-validation-for="IntervalMonths" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.ExpenseCategories">
            <option value="">-- Select Category (optional) --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="RecurringExpenses" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('expenseType').addEventListener('change', function() {
            var intervalGroup = document.getElementById('intervalGroup');
            var opt = this.options[this.selectedIndex];
            var interval = opt.getAttribute('data-interval');
            intervalGroup.style.display = (this.value === '1' || this.value === '2') ? 'block' : 'none';
            if (interval) document.querySelector('[name="IntervalMonths"]').value = interval;
        });
        // Select correct option when Type is RecurringInterval or Chit
        var intervalVal = document.querySelector('[name="IntervalMonths"]').value;
        var typeSelect = document.getElementById('expenseType');
        if (typeSelect.value === '1') {
            for (var i = 0; i < typeSelect.options.length; i++) {
                var d = typeSelect.options[i].getAttribute('data-interval');
                if (intervalVal === '12' && d === '12') { typeSelect.selectedIndex = i; break; }
                if (intervalVal !== '12' && d === '') { typeSelect.selectedIndex = i; break; }
            }
        } else if (typeSelect.value === '2') {
            for (var i = 0; i < typeSelect.options.length; i++) {
                if (typeSelect.options[i].value === '2') { typeSelect.selectedIndex = i; break; }
            }
        }
        typeSelect.dispatchEvent(new Event('change'));
    </script>
}
