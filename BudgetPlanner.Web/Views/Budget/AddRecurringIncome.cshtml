@model BudgetPlanner.Web.Models.RecurringIncome
@{
    ViewData["Title"] = "Add Recurring Income";
}

<h1>Add Recurring Income</h1>

<form asp-action="AddRecurringIncome" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="e.g. Salary, Rent Income" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IntervalMonths"></label>
        <select asp-for="IntervalMonths" class="form-control">
            <option value="1">Monthly</option>
            <option value="12">Yearly</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <small class="form-text text-muted">When this income started (used for yearly calculation).</small>
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Add Recurring Income</button>
    <a asp-action="RecurringIncomes" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
