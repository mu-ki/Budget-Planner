@model BudgetPlanner.Web.Models.AddPaymentViewModel
@{
    ViewData["Title"] = "Record Payment";
}

<h1>Record Payment (Withdraw from Reserve)</h1>

<form asp-action="AddPayment" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ReserveAccountId" />
    <input type="hidden" asp-for="InstallmentDueDate" />
    @if (Model.InstallmentDueDate.HasValue)
    {
        <div class="alert alert-info">Marking installment due <strong>@Model.InstallmentDueDate.Value.ToString("dd MMM yyyy")</strong> as paid.</div>
    }
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" step="0.01" min="0.01" class="form-control" placeholder="Amount paid" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaymentDate"></label>
        <input asp-for="PaymentDate" type="date" class="form-control" />
        <small class="form-text text-muted">Actual date when you paid.</small>
        <span asp-validation-for="PaymentDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <input asp-for="Notes" class="form-control" placeholder="e.g. 1st Installment, Chit turn Jan 2026" />
    </div>
    <button type="submit" class="btn btn-danger">Record Payment</button>
    <a asp-action="ReserveAccountDetail" asp-route-id="@Model.ReserveAccountId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
