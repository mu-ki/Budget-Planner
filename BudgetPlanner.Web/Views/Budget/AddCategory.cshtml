@model BudgetPlanner.Web.Models.Category
@{
    ViewData["Title"] = "Add Category";
}

<h1>Add Category</h1>

<form asp-action="AddCategory" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="e.g. Salary, Housing" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control">
            <option value="0">Income</option>
            <option value="1">Expense</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add Category</button>
    <a asp-action="Categories" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
