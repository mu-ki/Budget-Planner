@model IEnumerable<BudgetPlanner.Web.Models.ReserveAccountViewModel>
@{
    ViewData["Title"] = "Chit Accounts";
    var year = (int)ViewBag.Year;
    var month = (int)ViewBag.Month;
    var monthName = (string)ViewBag.MonthName;
    var prevMonth = month == 1 ? 12 : month - 1;
    var prevYear = month == 1 ? year - 1 : year;
    var nextMonth = month == 12 ? 1 : month + 1;
    var nextYear = month == 12 ? year + 1 : year;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Chit Accounts</h1>
    <div class="btn-group">
        @if (year > 2026 || month > 1)
        {
            <a asp-action="ReserveAccounts" asp-route-year="@prevYear" asp-route-month="@prevMonth" class="btn btn-outline-secondary">← Previous</a>
        }
        <span class="btn btn-secondary disabled">@monthName @year</span>
        <a asp-action="ReserveAccounts" asp-route-year="@nextYear" asp-route-month="@nextMonth" class="btn btn-outline-secondary">Next →</a>
    </div>
</div>

<p class="text-muted">
    Sinking funds for bills and chits. Save each month (allocate) and pay from the balance when the turn comes.
</p>

@if (Model.Any())
{
    var totalBalance = Model.Sum(r => r.Balance);
    var totalSaved = Model.Sum(r => r.TotalAllocated);
    var totalPaid = Model.Sum(r => r.TotalPaid);
    <div class="card mb-3">
        <div class="card-body">
            <strong>Total across all chit accounts:</strong>
            <span class="font-weight-bold @(totalBalance >= 0 ? "text-primary" : "text-warning")">@totalBalance.ToString("C")</span>
            <span class="text-muted">(Saved: @totalSaved.ToString("C") · Paid: @totalPaid.ToString("C"))</span>
        </div>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        No chit accounts yet. Create an expense first, then use <strong>Create Chit Account</strong> on the <a asp-action="RecurringExpenses">Recurring Expenses</a> page.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Chit Name</th>
                    <th>Total Amount</th>
                    <th>Planned / Month</th>
                    <th>Next Due</th>
                    <th>Due Amount</th>
                    <th>Balance</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>
                            <strong>@r.ExpenseDescription</strong>
                            @if (r.TenureEnd.HasValue)
                            {
                                <br /><small class="text-muted">Until @r.TenureEnd.Value.ToString("MMM yyyy")</small>
                            }
                        </td>
                        <td>@(r.TotalAmount.HasValue ? r.TotalAmount.Value.ToString("C") : "—")</td>
                        <td>@r.PlannedMonthlyAllocation.ToString("C")</td>
                        <td>@(r.NextDueDate?.ToString("MMM yyyy") ?? "—")</td>
                        <td class="text-danger font-weight-bold">@r.DueAmount.ToString("C")</td>
                        <td class="font-weight-bold @(r.Balance >= 0 ? "text-primary" : "text-warning")">@r.Balance.ToString("C")</td>
                        <td>
                            <a asp-action="ReserveAccountDetail" asp-route-id="@r.Id" class="btn btn-sm btn-primary">View</a>
                            <a asp-action="EditReserve" asp-route-id="@r.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <form asp-action="DeleteReserve" asp-route-id="@r.Id" method="post" class="d-inline" onsubmit="return confirm('Delete this chit account? All allocations and payments will be removed.');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<p class="mt-3">
    <a asp-action="Expenses" class="btn btn-secondary">Manage Expenses</a>
    <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
</p>
