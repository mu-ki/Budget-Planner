@model IEnumerable<BudgetPlanner.Web.Models.ReserveAccountViewModel>
@{
    ViewData["Title"] = "Reserve Accounts";
    var year = (int)ViewBag.Year;
    var month = (int)ViewBag.Month;
    var monthName = (string)ViewBag.MonthName;
    var prevMonth = month == 1 ? 12 : month - 1;
    var prevYear = month == 1 ? year - 1 : year;
    var nextMonth = month == 12 ? 1 : month + 1;
    var nextYear = month == 12 ? year + 1 : year;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Reserve Accounts</h1>
    <div class="btn-group">
        <a asp-action="ReserveAccounts" asp-route-year="@prevYear" asp-route-month="@prevMonth" class="btn btn-outline-secondary">← Previous</a>
        <span class="btn btn-secondary disabled">@monthName @year</span>
        <a asp-action="ReserveAccounts" asp-route-year="@nextYear" asp-route-month="@nextMonth" class="btn btn-outline-secondary">Next →</a>
    </div>
</div>

<p class="text-muted">
    Sinking funds for bills and chits. Save each month (allocate) and pay from the balance when the turn comes.
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No reserve accounts yet. Create an expense first, then use <strong>Create Reserve</strong> on the <a asp-action="Expenses">Expenses</a> page.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Obligation</th>
                    <th>Planned / Month</th>
                    <th>Total Saved</th>
                    <th>Total Paid</th>
                    <th>Balance</th>
                    <th>Due This Month</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>
                            <strong>@r.ExpenseDescription</strong>
                            @if (r.TenureEnd.HasValue)
                            {
                                <br /><small class="text-muted">Until @r.TenureEnd.Value.ToString("MMM yyyy")</small>
                            }
                        </td>
                        <td>@r.PlannedMonthlyAllocation.ToString("C")</td>
                        <td class="text-success">@r.TotalAllocated.ToString("C")</td>
                        <td class="text-danger">@r.TotalPaid.ToString("C")</td>
                        <td class="font-weight-bold @(r.Balance >= 0 ? "text-primary" : "text-warning")">@r.Balance.ToString("C")</td>
                        <td>
                            @if (r.IsDueThisMonth)
                            {
                                <span class="badge badge-warning">Yes - @r.InstallmentAmount.ToString("C")</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">No</span>
                            }
                        </td>
                        <td>
                            <a asp-action="ReserveAccountDetail" asp-route-id="@r.Id" class="btn btn-sm btn-outline-primary">Details</a>
                            <a asp-action="AddAllocation" asp-route-reserveAccountId="@r.Id" asp-route-year="@year" asp-route-month="@month" class="btn btn-sm btn-success">Save</a>
                            @if (r.IsDueThisMonth)
                            {
                                <a asp-action="AddPayment" asp-route-reserveAccountId="@r.Id" class="btn btn-sm btn-danger">Pay</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<p class="mt-3">
    <a asp-action="Expenses" class="btn btn-secondary">Manage Expenses</a>
    <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
</p>
