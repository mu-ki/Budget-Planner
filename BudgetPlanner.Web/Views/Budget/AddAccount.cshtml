@model BudgetPlanner.Web.Models.Account
@{
    ViewData["Title"] = "Add Account";
}

<h1>Add Account</h1>

<form asp-action="AddAccount" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="e.g. HDFC, SBI, Amma SBI" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BankName"></label>
        <input asp-for="BankName" class="form-control" placeholder="e.g. HDFC Bank (optional)" />
    </div>
    <div class="form-group">
        <label asp-for="Balance"></label>
        <input asp-for="Balance" type="number" step="0.01" class="form-control" placeholder="Current balance (optional)" />
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control">
            <option value="0">Salary – where income lands</option>
            <option value="1">Savings – general savings</option>
            <option value="2">Chit – chit fund account</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add Account</button>
    <a asp-action="Accounts" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
