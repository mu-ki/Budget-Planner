@model IEnumerable<BudgetPlanner.Web.Models.Expense>
@{
    ViewData["Title"] = "Recurring Expenses";
    var idsWithReserve = ViewBag.ExpenseIdsWithReserve as HashSet<int> ?? new HashSet<int>();
    var expenseToReserve = ViewBag.ExpenseIdToReserveId as Dictionary<int, int> ?? new Dictionary<int, int>();
}
@functions {
    DateTime GetNextDate(BudgetPlanner.Web.Models.Expense item)
    {
        var today = DateTime.Today;
        var d = item.StartDate.Date;
        int interval = item.Type == BudgetPlanner.Web.Models.ExpenseType.Monthly ? 1 : item.IntervalMonths;
        while (d < today) d = d.AddMonths(interval);
        return d;
    }
}

<h1>Recurring Expenses</h1>

<p>
    <a asp-action="AddExpense" class="btn btn-danger">Add Recurring Expense</a>
    <a asp-action="Expenses" class="btn btn-secondary">One-time Expenses</a>
    <a asp-action="Dashboard" class="btn btn-outline-secondary">Dashboard</a>
</p>

<p class="text-muted">Recurring expenses (monthly bills, yearly bills, every N months) are included automatically in your monthly breakdown. Create a reserve for sinking funds.</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Description</th>
            <th>Amount</th>
            <th>Frequency</th>
            <th>Start Date</th>
            <th>Next Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td class="text-danger">@item.Amount.ToString("C")</td>
                <td>
                    @if (item.Type == BudgetPlanner.Web.Models.ExpenseType.Monthly)
                    {
                        <span class="badge badge-primary">Monthly</span>
                    }
                    else if (item.Type == BudgetPlanner.Web.Models.ExpenseType.Chit)
                    {
                        <span class="badge badge-warning">Chit (@item.IntervalMonths mo)</span>
                    }
                    else if (item.IntervalMonths == 12)
                    {
                        <span class="badge badge-info">Yearly</span>
                    }
                    else
                    {
                        <span class="badge badge-info">Every @item.IntervalMonths months</span>
                    }
                </td>
                <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@GetNextDate(item).ToString("yyyy-MM-dd")</td>
                <td>
                    @if (idsWithReserve.Contains(item.Id) && expenseToReserve.ContainsKey(item.Id))
                    {
                        <a asp-action="ReserveAccountDetail" asp-route-id="@expenseToReserve[item.Id]" class="btn btn-sm btn-success">Reserve</a>
                    }
                    else
                    {
                        <a asp-action="CreateReserve" asp-route-expenseId="@item.Id" class="btn btn-sm btn-outline-success">Create Reserve</a>
                    }
                    <a asp-action="EditExpense" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                    <form asp-action="DeleteExpense" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Delete this recurring expense?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p class="text-muted">No recurring expenses. <a asp-action="AddExpense">Add recurring expense</a> (monthly bill, yearly bill, chit, or every N months).</p>
}
