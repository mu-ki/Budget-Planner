@model BudgetPlanner.Web.Models.AddAllocationViewModel
@{
    ViewData["Title"] = "Record Allocation";
}

<h1>Record Allocation (Save to Reserve)</h1>

<form asp-action="AddAllocation" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ReserveAccountId" />
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" step="0.01" min="0.01" class="form-control" placeholder="Amount to save this month" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AllocationDate"></label>
        <input asp-for="AllocationDate" type="date" class="form-control" />
        <small class="form-text text-muted">The month this allocation is for (use 1st of month).</small>
        <span asp-validation-for="AllocationDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save Allocation</button>
    <a asp-action="ReserveAccountDetail" asp-route-id="@Model.ReserveAccountId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
