@model BudgetPlanner.Web.Models.Expense
@{
    ViewData["Title"] = "Add Expense";
}

<h1>Add Expense</h1>

<form asp-action="AddExpense" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="e.g. Rent, Quarterly Savings" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" id="expenseType" class="form-control">
            <option value="0">Monthly Bill</option>
            <option value="1" data-interval="12">Yearly Bill</option>
            <option value="1" data-interval="">Recurring (every N months)</option>
            <option value="2" data-interval="4">Chit</option>
        </select>
        <small class="form-text text-muted">
            Monthly = every month. Yearly = once per year. Recurring = every N months (e.g. quarterly). Chit = accumulate in bank, pay when turn comes.
        </small>
    </div>
    <div class="form-group" id="intervalGroup" style="display:none;">
        <label asp-for="IntervalMonths"></label>
        <input asp-for="IntervalMonths" type="number" min="1" max="120" class="form-control" placeholder="e.g. 3, 4, 6" />
        <small class="form-text text-muted" id="intervalHint">Every how many months (e.g. 3 = quarterly, 4 = 4‑month chit).</small>
        <span asp-validation-for="IntervalMonths" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <small class="form-text text-muted">When this expense first applies. For recurring, used to calculate due months.</small>
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.ExpenseCategories">
            <option value="">-- Select Category (optional) --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-danger">Add Expense</button>
    <a asp-action="RecurringExpenses" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('expenseType').addEventListener('change', function() {
            var intervalGroup = document.getElementById('intervalGroup');
            var intervalHint = document.getElementById('intervalHint');
            var opt = this.options[this.selectedIndex];
            var interval = opt.getAttribute('data-interval');
            var needsInterval = this.value === '1' || this.value === '2';
            intervalGroup.style.display = needsInterval ? 'block' : 'none';
            var intervalInput = document.querySelector('[name="IntervalMonths"]');
            if (this.value === '0') intervalInput.value = '1';
            else if (interval) intervalInput.value = interval;
            intervalHint.textContent = this.value === '2'
                ? 'Chit cycle length (e.g. 4 = 4‑month chit, 6 = 6‑month chit).'
                : 'Every how many months (e.g. 3 = quarterly, 4 = every 4 months).';
        });
        document.getElementById('expenseType').dispatchEvent(new Event('change'));
    </script>
}
